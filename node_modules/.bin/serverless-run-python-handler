#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/python2.7" ]; then
  "$basedir/python2.7"  "$basedir/../serverless/bin/serverless-run-python-handler" "$@"
  ret=$?
else 
  python2.7  "$basedir/../serverless/bin/serverless-run-python-handler" "$@"
  ret=$?
fi
exit $ret
